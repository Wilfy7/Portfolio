{
  "compilerOptions": {
    "target": "ES2020", // Supports modern JavaScript features
    "module": "commonjs", // Required for Node.js
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true, // For compatibility with CommonJS/ES modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Speeds up build by skipping library checks
    "outDir": "./lib" // Where compiled JavaScript files go
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
